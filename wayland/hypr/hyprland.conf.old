# bind=,Print,exec,XDG_CURRENT_DESKTOP=sway flameshot gui
bind=,Print,exec,FN=screenshot_$(date "+%F-%T"); grim -g "$(slurp)" ~/$FN.png ; wl-copy < ~/$FN.png -t image/png ; scp -i ~/.ssh/id_rsa_raspi ~/$FN.png pi@192.168.1.84:GCAL/screenshot.png


# allow for screen recording via xdg-desktop-portal-wlr
# exec-once=dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec-once=systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec-once=hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP


# notification daemon
exec-once=dunst

# status bar
exec-once=waybar

# background
exec-once=swaybg -i /home/morro/Immagini/wallpaper.jpg
exec-once=swaybg -i /home/morro/Pictures/wallpapers/wp7969036-blurry-ultra-hd-wallpapers.jpg

# audio equalizer
